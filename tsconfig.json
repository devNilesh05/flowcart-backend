{
  "compilerOptions": {
    // Output
    "rootDir": "./src",
    "outDir": "./dist",

    // Modern ESM for Node + Prisma
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    // JSX & Type Helpers
    "types": ["node"],
    "skipLibCheck": true,

    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Build Options
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Required for ESM TypeScript
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["src/**/*"]
}
